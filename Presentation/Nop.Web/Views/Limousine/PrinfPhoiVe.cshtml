@model Nop.Web.Models.NhaXes.QuanLyChuyenModel
@{
    Layout = null;
    Model.sodoghe.PhanLoai = Nop.Core.Domain.NhaXes.ENPhanLoaiPhoiVe.IN_PHOI_VE;
}
<table style="width:100%" cellpadding="5" cellspacing="5">
    <tr>
        <td colspan="4">
            <h2>GIẤY ĐI ĐƯỜNG</h2>
        </td>
    </tr>
    <tr>
        <td><strong>Hành trình:</strong> @Model.chuyendihientai.TenHanhTrinh</td>
        <td><strong>Thời gian chạy:</strong> @Model.chuyendihientai.NgayDiThuc.ToString("dd/MM/yyyy HH:mm")</td>
        <td><strong>Biển số:</strong> @Model.chuyendihientai.BienSoXe</td>
        <td><strong>Lái xe:</strong> @Model.chuyendihientai.TenLaiXe</td>
    </tr>    
</table>

@Html.Partial("_GetInfoSoDoGheXeToDatVe", Model)

<table style="margin-top:50px;">
    <tr>
        <td>
            <h2>Danh sách hàng hóa</h2>
        </td>
    </tr>
</table>
<table style="width: 100%; border: 1px solid #000000; border-collapse: collapse;" cellspacing="5" cellpadding="5">
    <tr style="font-weight: bold; text-align: center;">
        <td style="border: 1px solid #000000;">STT</td>
        <td style="border: 1px solid #000000;">Tên hàng</td>
        <td style="border: 1px solid #000000;">Người gửi</td>
        <td style="border: 1px solid #000000;">Người nhận</td>
        <td style="border: 1px solid #000000;">Cước phí(Tình trạng)</td>
        <td style="border: 1px solid #000000;">Ngày gửi</td>
    </tr>
    @{var STT = 1;}
    @foreach (var item in Model.danhsachhanghoas)
    {
        <tr>
            <td style="border: 1px solid #000000;">@STT</td>
            <td style="border: 1px solid #000000;">@item.TenHang</td>
            <td style="border: 1px solid #000000;">@item.NguoiGui - @item.DienThoaiNguoiGui - @item.DiaChiNguoiGui</td>
            <td style="border: 1px solid #000000;">@item.NguoiNhan - @item.DienThoaiNguoiNhan - @item.DiaChiNguoiNhan</td>
            <td style="border: 1px solid #000000;">@item.CuocPhi (@item.TinhTrang)</td>
            <td style="border: 1px solid #000000;">@item.NgayGui</td>
</tr>
        STT++;
    }
</table>



